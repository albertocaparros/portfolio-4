---
import ArrowUp from '../icons/ArrowUp.astro';
---

<a
  id="scroll-up"
  href="#"
  class="fixed bottom-16 right-4 flex h-8 w-8 items-center justify-center rounded bg-blue-200 opacity-90 transition-all hover:bg-blue-300 dark:bg-sky-800 dark:hover:bg-sky-700"
  ><ArrowUp /></a
>

<script>
  var scrollUp = () => {
    const scrollUp = document.getElementById('scroll-up');

    if (globalThis.scrollY >= screen.availHeight) {
      scrollUp.classList.add('bottom-16');
      scrollUp.classList.remove('-bottom-16');
    } else {
      scrollUp.classList.add('-bottom-16');
      scrollUp.classList.remove('bottom-16');
    }
  };

  window.addEventListener('scroll', scrollUp);
</script>
