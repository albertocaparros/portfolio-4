---
import Github from '../icons/Github.astro';
import Linkedin from '../icons/Linkedin.astro';
import Logo from '../icons/Logo.astro';
import Mail from '../icons/Mail.astro';
---

<section id='home' class='flex container min-h-screen mb-6 w-full'>
	<div class='flex flex-col gap-6 my-auto p-2'>
		<div class='flex'>
			<div class='w-1/3 flex flex-col items-center justify-center'>
				<a
					href='https://www.linkedin.com/in/albertocaparros/'
					class='my-8'
					target='_blank'
					title='My linkedin profile'>
					<Linkedin height={10} width={10} />
				</a>
				<a
					href='https://www.linkedin.com/in/albertocaparros/'
					class='my-8'
					target='_blank'
					title='My linkedin profile'>
					<Github height={10} width={10} />
				</a>
			</div>
			<div class='w-2/3'>
				<Logo />
			</div>
		</div>
		<div class='flex flex-col text-center'>
			<h1 class='text-4xl font-bold'>Alberto Caparr√≥s</h1>
			<h3 class='text-lg font-semibold' data-i18n-key='working-title'>
				Front-end developer
			</h3>
			<p class='my-6' data-i18n-key='site-description'>
				Welcome to my personal website, where you can get to learn about me and
				my work. Currently available for remote freelance and full time work.
			</p>
			<div class='flex flex-col my-6'>
				<p class='flex text-center mx-auto gap-2 items-center'>
					<Mail />
					<a href='mailto:albertocaparrostrigo@gmail.com' class='contact-icon'>
						<i class='uil uil-envelope'></i>
						<span class='text-xl font-semibold' data-i18n-key='contact'>
							Contact
						</span>
					</a>
				</p>
				<span>albertocaparrostrigo@gmail.com</span>
			</div>
		</div>
	</div>
</section>
