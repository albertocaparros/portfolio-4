---
import Github from '../icons/Github.astro';
import Linkedin from '../icons/Linkedin.astro';
import Mail from '../icons/Mail.astro';
---

<section
  id="home"
  class="mb-6 flex h-screen w-full pb-16 pt-8 sm:h-min sm:py-4 lg:pt-36 lg:text-2xl"
>
  <div
    class="my-auto grid grid-cols-[1.5fr,3fr] items-center gap-x-0 gap-y-6 px-2 py-16 sm:grid-cols-[0.5fr,2.5fr,1fr] lg:mx-auto lg:max-w-6xl lg:gap-12"
  >
    <div class="my-auto flex flex-col items-center gap-0">
      <a
        href="https://www.linkedin.com/in/albertocaparros/"
        class="my-8"
        target="_blank"
        title="My linkedin profile"
      >
        <Linkedin height={8} width={8} />
      </a>
      <a
        href="https://github.com/albertocaparros/"
        class="my-8"
        target="_blank"
        title="My github profile"
      >
        <Github height={8} width={8} />
      </a>
    </div>

    <img
      src={'img/logo_light.png'}
      class="mx-auto hidden w-44 dark:block sm:order-1 lg:w-64"
    />
    <img
      src={'img/logo_dark.png'}
      class="mx-auto block w-44 dark:hidden sm:order-1 lg:w-64"
    />

    <div
      class="col-start-1 col-end-3 text-center sm:col-start-auto sm:col-end-auto"
    >
      <h1 class="text-4xl font-bold lg:text-6xl">Alberto Caparr√≥s</h1>
      <h3
        class="text-lg font-semibold lg:mt-2 lg:text-2xl"
        data-i18n-key="working-title"
      >
        Front-end developer
      </h3>
      <p class="my-6" data-i18n-key="site-description">
        Welcome to my personal website, where you can get to learn about me and
        my work. Currently available for remote freelance and full time work.
      </p>
      <div class="my-6 flex flex-col">
        <a
          href="mailto:albertocaparrostrigo@gmail.com"
          class="mx-auto flex items-center gap-2 text-center"
        >
          <Mail />
          <span class="text-xl font-semibold" data-i18n-key="contact">
            Contact
          </span>
        </a>

        <span>albertocaparrostrigo@gmail.com</span>
      </div>
    </div>
  </div>
</section>
