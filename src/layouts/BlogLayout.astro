---
import '../styles/post.css';
import Datetime from '../components/Datetime';
import Layout from './Layout.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogNavMenu from '../components/BlogNavMenu.astro';
import ArrowLeft from '../icons/ArrowLeft.astro';

const {
  data: { title, pubDate },
} = Astro.props;
---

<Layout>
  <BlogHeader />
  <BlogNavMenu />

  <main
    class="mx-auto flex h-full w-full max-w-5xl flex-col justify-start p-4 py-10 lg:pt-36"
  >
    <button
      aria-label="Go back"
      class="focus-outline my-2 flex items-center text-left align-middle hover:opacity-75"
      onclick="
			history.back()
			"
    >
      <ArrowLeft height={2} width={2} />
      <span> Go back</span>
    </button>

    <h1 class="text-4xl text-sky-700 dark:text-orange-400">
      {title}
    </h1>
    <div class="my-2 flex items-center space-x-2 opacity-80">
      <p class="text-sm">
        <Datetime datetime={pubDate} size="lg" className="my-2" />
      </p>
    </div>
    <article
      role="article"
      class="prose mx-auto w-full dark:prose-invert lg:prose-xl"
    >
      <slot />
    </article>
  </main>
</Layout>
