---
import "../styles/post.css";
import Datetime from "../components/Datetime";
import Layout from "./Layout.astro";
import BlogHeader from "../components/BlogHeader.astro";
import BlogNavMenu from "../components/BlogNavMenu.astro";
import ArrowLeft from "../icons/ArrowLeft.astro";

const {
  data: { title, pubDate },
} = Astro.props;
---

<Layout>
  <BlogHeader />
  <BlogNavMenu />

  <main
    class="flex flex-col justify-start max-w-5xl mx-auto p-4 w-full h-full py-10 lg:pt-36"
  >
    <button
      class="flex align-middle items-center focus-outline hover:opacity-75 text-left my-2"
      onclick="
			history.back()
			"
    >
      <ArrowLeft height={2} width={2} />
      <span> Go back</span>
    </button>

    <h1 class="text-4xl text-sky-700 dark:text-orange-400">
      {title}
    </h1>
    <div class="flex items-center my-2 opacity-80 space-x-2">
      <p class="text-sm">
        <Datetime datetime={pubDate} size="lg" className="my-2" />
      </p>
    </div>
    <article
      role="article"
      class="prose lg:prose-xl dark:prose-invert mx-auto w-full"
    >
      <slot />
    </article>
  </main>
</Layout>
